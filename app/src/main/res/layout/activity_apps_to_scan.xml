<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apps_to_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.op_dfat.Activity_Apps_to_scan">



    <TextView
        android:id="@+id/appsToScanTitle"
        android:layout_width="match_parent"
        android:text="@string/appsToScanTitle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/appsSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appsToScanTitle" />

    <ListView
        android:id="@+id/appsToScanListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/appsSearch"
        android:layout_alignParentStart="true"/>

</RelativeLayout>

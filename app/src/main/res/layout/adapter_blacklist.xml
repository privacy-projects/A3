<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_blacklist"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blacklistAppIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dip" />

    <TextView
        android:id="@+id/blacklistAppName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@id/blacklistAppIcon"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/blacklistAnomalyScore"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/blacklistAppName"
        android:layout_toEndOf="@id/blacklistAppIcon"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"/>

</RelativeLayout>